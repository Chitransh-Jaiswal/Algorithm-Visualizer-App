<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertionSortPage"
    android:background="@drawable/thumbnail_1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="25dp"
        android:paddingHorizontal="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appname_insertionsort"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:fontFamily="@font/bungee_inline"
                android:text="INSERTION SORT"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bitter"
                android:text="Insertion sort is a simple sorting algorithm that works similar to the way you sort playing cards in your hands. The array is virtually split into a sorted and an unsorted part. Values from the unsorted part are picked and placed at the correct position in the sorted part."
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/concert_one"
                android:text="Time Complexity: O(N^2)\n  Auxiliary Space: O(1)"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/btn_visualise_insertion_sort_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:backgroundTint="#8194C4"
                android:fontFamily="@font/concert_one"
                android:onClick="onVisualiseClick"
                android:text="VISUALISE"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="1"
                android:padding="5dp"
                android:alignmentMode="alignBounds"
                >

                <Button
                    android:id="@+id/btn1_insertion_sort"
                    android:backgroundTint="#1C9F8F"
                    android:text="C"
                    android:onClick="onButtonClick"
                    android:textAlignment="center"
                    android:textColor="@color/white"></Button>

                <Button
                    android:id="@+id/btn2_insertion_sort"
                    android:backgroundTint="#1C9F8F"
                    android:text="C++"
                    android:onClick="onButtonClick"
                    android:textAlignment="center"
                    android:textColor="@color/white"></Button>

                <Button
                    android:id="@+id/btn3_insertion_sort"
                    android:backgroundTint="#1C9F8F"
                    android:text="Java"
                    android:onClick="onButtonClick"
                    android:textAlignment="center"
                    android:textColor="@color/white"></Button>

                <Button
                    android:id="@+id/btn4_insertion_sort"
                    android:backgroundTint="#1C9F8F"
                    android:text="Python"
                    android:onClick="onButtonClick"
                    android:textAlignment="center"
                    android:textColor="@color/white"></Button>
            </GridLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#D9D9D9">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/code_area_insertion_sort"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/droid_sans_mono"
                            android:text="Code will come here."
                            android:textColor="@color/black"></TextView>
                    </HorizontalScrollView>
                </ScrollView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>